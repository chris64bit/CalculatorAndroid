<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.chris64bit.calculatorandroid.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/result_id"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:editable="false"
                android:textColor="#ff0000"
                android:textColorHighlight="#202020"
                android:textSize="40dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Btn7_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn7Clicked"
                        android:text="7" />

                    <Button
                        android:id="@+id/Btn8_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn8Clicked"
                        android:text="8" />

                    <Button
                        android:id="@+id/Btn9_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn9Clicked"
                        android:text="9" />

                    <Button
                        android:id="@+id/BtnClear_id"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:onClick="btnClearClicked"
                        android:text="Clear" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Btn4_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn4Clicked"
                        android:text="4" />

                    <Button
                        android:id="@+id/Btn5_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn5Clicked"
                        android:text="5" />

                    <Button
                        android:id="@+id/Btn6_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn6Clicked"
                        android:text="6" />

                    <Button
                        android:id="@+id/BtnPlus_id"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:onClick="btnPlusClicked"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Btn1_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn1Clicked"
                        android:text="1" />

                    <Button
                        android:id="@+id/Btn2_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn2Clicked"
                        android:text="2" />

                    <Button
                        android:id="@+id/Btn3_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn3Clicked"
                        android:text="3" />

                    <Button
                        android:id="@+id/BtnMin_id"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:onClick="btnMinClicked"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/BtnKali_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btnKaliClicked"
                        android:text="x" />

                    <Button
                        android:id="@+id/Btn0_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btn0Clicked"
                        android:text="0" />

                    <Button
                        android:id="@+id/BtnBagi_id"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:onClick="btnBagiClicked"
                        android:text="/" />

                    <Button
                        android:id="@+id/BtnHasil_id"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:onClick="btnHasilClicked"
                        android:text="=" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
